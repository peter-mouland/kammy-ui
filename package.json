{
  "name": "kammy-ui",
  "version": "0.0.1",
  "description": "UI components for Kammy using lerna + storybook",
  "private": true,
  "main": "index.js",
  "scripts": {
    "--------- DEVELOPMENT -------------": "",
    "start": "start-storybook -s ./tests/fixtures -p 9001",
    "start:test-server": "node  tests/regression/start-test-server.js",
    "build": "build-storybook -o public",
    "--------- LINTING ------------------": "",
    "lint": "yarn lint:css && yarn lint:js",
    "lint:js": "eslint 'packages/*/*/src/**/*.jsx' 'packages/*/*/src/**/*.js' 'tests/*/src/**/*.js'",
    "lint:css": "stylelint 'packages/*/*/src/**/*.scss'",
    "--------- TESTS:UNIT ---------------": "",
    "test": "jest --config=jest.json",
    "test:setup": "selenium-standalone install && yarn webpack && yarn build",
    "xb": "yarn regression:core -- --env local --filter **/*.xb.js",
    "regression:core": "cross-env NODE_ENV=production ./tests/regression/start-test-server.js -o ./tests/regression/tests_output -c ./tests/nightwatch/nightwatch.conf.js --saveDir=new --compareDir=base",
    "--------- DEPLOY / PUBLISH ---------------": "",
    "publish": "yarn pre-publish && lerna publish",
    "webpack": "cross-env NODE_ENV=production webpack --config webpack.config.js -p",
    "--------- HELPERS ----------": "",
    "init": "yarn && yarn test:setup && yarn precommit",
    "precommit": "yarn lint && yarn test",
    "postinstall": "npm run bootstrap",
    "pre-publish": "git fetch && git pull -r && yarn test:setup && yarn lint && yarn test && yarn xb",
    "nuke": "yarn clean && rm -rf node_modules && yarn run init",
    "--------- LERNA ----------": "",
    "linkAll": "lerna exec yarn link",
    "npmLinkAll": "lerna exec npm link",
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --yes"
  },
  "author": "peter.mouland@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/peter-mouland/kammy-ui/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/peter-mouland/kammy-ui#readme",
  "dependencies": {
    "cross-env": "^5.1.4",
    "prop-types": "^15.6.1",
    "react": "^16.3.1",
    "resolve-url-loader": "^2.3.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^4.0.0-alpha.2",
    "@storybook/addon-actions": "^4.0.0-alpha.2",
    "@storybook/addon-backgrounds": "^4.0.0-alpha.2",
    "@storybook/addon-info": "^4.0.0-alpha.2",
    "@storybook/addon-knobs": "^4.0.0-alpha.2",
    "@storybook/addon-options": "^4.0.0-alpha.2",
    "@storybook/addon-viewport": "^4.0.0-alpha.2",
    "@storybook/cli": "^4.0.0-alpha.2",
    "@storybook/react": "^4.0.0-alpha.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "body-parser": "^1.18.2",
    "chance": "^1.0.13",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-babel": "^5.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "jest-enzyme": "^6.0.0",
    "jsonwebtoken": "^8.2.1",
    "jwt-decode": "^2.2.0",
    "lerna": "^2.10.1",
    "nightwatch": "^0.9.20",
    "node-sass": "^4.8.3",
    "progress-bar-webpack-plugin": "^1.11.0",
    "react-dom": "^16.3.1",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-promise-middleware": "^5.0.0",
    "redux-thunk": "^2.2.0",
    "sass-lint": "^1.12.1",
    "sass-loader": "^7.0.1",
    "selenium-standalone": "^6.13.0",
    "style-loader": "^0.20.3",
    "stylelint": "^9.2.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-standard": "^18.2.0",
    "svg-inline-loader": "^0.8.0",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14"
  }
}
