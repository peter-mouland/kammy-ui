{
  "name": "kammy-ui",
  "version": "0.0.1",
  "description": "UI components for Kammy using lerna + storybook",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "main": "index.js",
  "author": "peter.mouland@gmail.com",
  "license": "ISC",
  "homepage": "https://github.com/peter-mouland/kammy-ui#readme",
  "engines": {
    "node": "^9.3.0",
    "yarn": "^1.0.0",
    "npm": "^5.5.0"
  },
  "bugs": {
    "url": "https://github.com/peter-mouland/kammy-ui/issues"
  },
  "scripts": {
    "--------- DEVELOPMENT -------------": "",
    "start": "PORT=9001 start-storybook -s ./tests/fixtures -p 9001",
    "build:storybook": "build-storybook -o public",
    "start:webapp:dev": "lerna exec --scope @kammy-ui/webapp -- yarn start:dev",
    "--------- PRODUCTION -------------": "",
    "mongo": "mongod  --dbpath mongodb",
    "mongo:kill": "mongod --shutdown",
    "start:storybook": "start-storybook -s ./tests/fixtures",
    "start:webapp:prod": "lerna exec --scope @kammy-ui/webapp -- yarn start:prod",
    "--------- LINTING ------------------": "",
    "lint": "yarn lint:css && yarn lint:js",
    "lint:js": "eslint packages --ext=js,jsx",
    "lint:css": "stylelint 'packages/*/*/src/**/*.scss'",
    "--------- TESTS:UNIT ---------------": "",
    "test": "jest --config=jest.json",
    "--------- DEPLOY / PUBLISH ---------------": "",
    "publish": "yarn pre-publish && lerna publish",
    "build": "yarn build:web && yarn build:webapp",
    "build:web": "cross-env NODE_ENV=production webpack --config webpack.config.js -p",
    "build:webapp": "lerna exec --scope @kammy-ui/webapp -- yarn build",
    "--------- HELPERS ----------": "",
    "init": "yarn && yarn precommit",
    "precommit": "yarn lint && yarn test",
    "postinstall": "yarn bootstrap && yarn build",
    "pre-publish": "git fetch && git pull -r && yarn lint && yarn test",
    "nuke": "yarn clean && rm -rf node_modules && yarn run init",
    "--------- LERNA ----------": "",
    "linkAll": "lerna exec yarn link",
    "npmLinkAll": "lerna exec npm link",
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --yes"
  },
  "dependencies": {
    "mongoose": "^4.13.14",
    "prop-types": "^15.6.2",
    "react": "^16.4.1"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^4.0.0-alpha.14",
    "@storybook/addon-actions": "^4.0.0-alpha.14",
    "@storybook/addon-backgrounds": "^4.0.0-alpha.14",
    "@storybook/addon-info": "^4.0.0-alpha.14",
    "@storybook/addon-knobs": "^4.0.0-alpha.14",
    "@storybook/addon-options": "^4.0.0-alpha.14",
    "@storybook/addon-viewport": "^4.0.0-alpha.14",
    "@storybook/cli": "^4.0.0-alpha.14",
    "@storybook/react": "^4.0.0-alpha.14",
    "assets-webpack-plugin": "^3.8.4",
    "babel-cli": "^6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "^8.2.5",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "^6.24.1",
    "body-parser": "^1.18.3",
    "chance": "^1.0.16",
    "clean-webpack-plugin": "^0.1.19",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.1.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.1.0",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "husky": "^0.14.3",
    "jest": "^23.3.0",
    "jest-enzyme": "^6.0.0",
    "jsonwebtoken": "^8.2.1",
    "lerna": "^2.11.0",
    "node-sass": "^4.9.2",
    "progress-bar-webpack-plugin": "^1.11.0",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "resolve-url-loader": "^2.3.0",
    "sass-lint": "^1.12.1",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "stylelint": "^9.2.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-standard": "^18.2.0",
    "svg-inline-loader": "^0.8.0",
    "webpack": "^4.16.2",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2",
    "webpack-visualizer-plugin": "^0.1.11"
  }
}
